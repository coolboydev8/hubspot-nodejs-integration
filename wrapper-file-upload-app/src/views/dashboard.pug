extends includes/layout
block content
  .container
    h3 Upload by URL
    form(action='/upload')
      input(type='text' name='url' placeholder='URL..' id='url' value=url)
      span &nbsp;
      input(class='button-primary' type='submit' value='Upload')
      -if (fileByUrl)
        a(href=fileByUrl) File

    h3 Upload from the computer
    form(action='/upload')
      input(type='file' name='content' id='content' value=content)
      span &nbsp;
      input(class='button-primary' type='submit' value='Upload')
      -if (fileFromComputer)
        a(href=fileFromComputer) File
