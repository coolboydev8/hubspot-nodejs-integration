extends includes/layout
block content
  - const getCompaniesApiDetails = ' Get all companies\n GET /companies/v2/companies/paged\n hubspot.companies.get(opts)';
  - const searchCompaniesApiDetails = ' Search for companies by domain\n POST /companies/v2/domains/:domain/companies\n hubspot.companies.getByDomain(domain)';

  section(class='container')

    pre #{getCompaniesApiDetails}
    form(action='/companies')
      fieldset
        input(type='text' name='search' placeholder='Search by domain..' id='search' value='')

    pre #{getCompaniesApiDetails}
    table
      thead
        tr
          th ID
          th Name
          th Domain
      tbody
        each company in companies
          tr
            td
              a(class='navigation-link' href=`/companies/${company.companyId}`)= company.companyId
            td= company.properties.name.value
            td= company.properties.domain.value
